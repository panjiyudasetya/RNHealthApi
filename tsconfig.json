{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "module": "es2015",
        "moduleResolution": "Node",
        "noImplicitAny" : true,
        "noUnusedLocals": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "target": "es2015",
    },
    "exclude": ["dist", "node_modules"],
    "include": ["src/**/*"]
}
